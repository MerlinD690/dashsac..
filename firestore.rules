
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em todas as coleções necessárias para o dashboard.
    // Para um aplicativo em produção com dados sensíveis, seria necessário
    // adicionar autenticação e regras mais restritivas.
    match /AtendimentoSAC/{agentId} {
      allow read, write: if true;
    }
    match /pause_logs/{logId} {
      allow read, write: if true;
    }
    match /daily_reports/{reportId} {
      allow read, write: if true;
    }
  }
}
